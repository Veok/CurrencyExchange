<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:id="@+id/txt_search_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteY="357dp"
            tools:layout_editor_absoluteX="7dp"/>

    <Button
            android:id="@+id/btn_search"
            android:layout_width="371dp"
            android:layout_height="69dp"
            android:textColor="@android:color/white"
            android:background="@drawable/search_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Szukaj"
            app:layout_constraintHorizontal_bias="0.538"
            app:layout_constraintVertical_bias="0.963"
            tools:text="ww"/>



    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier" app:barrierDirection="left"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="20dp"
                                          android:orientation="horizontal">
    </android.support.constraint.Guideline>
    <ImageView
            android:layout_width="318dp"
            android:layout_height="178dp" app:srcCompat="@drawable/usa" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="33dp" android:id="@+id/imageView2"/>

</android.support.constraint.ConstraintLayout>