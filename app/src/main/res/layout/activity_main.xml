<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ecf0f5"
        tools:context=".MainActivity">


    <TextView
            android:id="@+id/txt_search_result_sell"
            android:layout_width="146dp"
            android:layout_height="38dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:text="@string/sell"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/barrier" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:id="@+id/txt_search_result_buy"
            android:layout_width="121dp"
            android:layout_height="38dp"
            android:textAlignment="center"
            android:textSize="24sp"
            android:text="@string/buy"
            android:layout_marginBottom="140dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_search" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/barrier" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_search_result_sell" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:id="@+id/btn_search"
            android:layout_width="371dp"
            android:layout_height="69dp"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:background="@drawable/search_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/count"
            app:layout_constraintHorizontal_bias="0.538"
            tools:text="Count!" android:layout_marginBottom="16dp"/>



    <android.support.constraint.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                        android:id="@+id/barrier" app:barrierDirection="left"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.039138943">
    </android.support.constraint.Guideline>
    <ImageView
            android:layout_width="354dp"
            android:layout_height="178dp" app:srcCompat="@drawable/usa"
            android:id="@+id/imageView2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/barrier" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.533"/>
    <TextView
            android:layout_width="394dp"
            android:layout_height="22dp"
            android:text="@string/spinner_title"
            style="@style/InputLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_search_result_buy"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_search" app:layout_constraintVertical_bias="0.328"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <Spinner
            android:layout_width="368dp"
            android:entries="@array/spinnerItems"
            android:layout_height="50dp"
            android:id="@+id/spinner"
            android:textAlignment="center"

            app:layout_constraintEnd_toEndOf="@+id/barrier" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="8dp"/>


</android.support.constraint.ConstraintLayout>